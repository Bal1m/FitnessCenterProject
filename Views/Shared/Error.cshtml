@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body p-5">
                    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                    <h2 class="mt-4">Bir Hata Oluştu</h2>
                    <p class="text-muted mb-4">
                        Üzgünüz, bir şeyler yanlış gitti. Lütfen daha sonra tekrar deneyin.
                    </p>
                    @if (Model?.RequestId != null)
                    {
                        <p class="small text-muted">
                            <strong>Request ID:</strong> @Model.RequestId
                        </p>
                    }
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house me-2"></i>Ana Sayfaya Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>