@{
    ViewData["Title"] = "İletişim";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="section-title">İletişim</h1>
        <p class="text-muted">Bizimle iletişime geçin</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-4">Bize Ulaşın</h4>

                    <form>
                        <div class="mb-3">
                            <label class="form-label">Adınız Soyadınız</label>
                            <input type="text" class="form-control" placeholder="Adınız Soyadınız">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">E-posta Adresiniz</label>
                            <input type="email" class="form-control" placeholder="ornek@email.com">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Konu</label>
                            <select class="form-select">
                                <option value="">Seçiniz</option>
                                <option value="genel">Genel Bilgi</option>
                                <option value="uyelik">Üyelik</option>
                                <option value="randevu">Randevu</option>
                                <option value="sikayet">Şikayet/Öneri</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mesajınız</label>
                            <textarea class="form-control" rows="4" placeholder="Mesajınızı yazın..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-send me-2"></i>Gönder
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-4">İletişim Bilgileri</h4>

                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="bi bi-geo-alt text-white"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h6 class="fw-bold mb-1">Adres</h6>
                            <p class="text-muted mb-0">Sakarya Üniversitesi Kampüsü<br>Serdivan / Sakarya</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="bi bi-telephone text-white"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h6 class="fw-bold mb-1">Telefon</h6>
                            <p class="text-muted mb-0">0264 295 50 00</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <div class="bg-info rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="bi bi-envelope text-white"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h6 class="fw-bold mb-1">E-posta</h6>
                            <p class="text-muted mb-0">info@fitlife.com</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="bi bi-clock text-white"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h6 class="fw-bold mb-1">Çalışma Saatleri</h6>
                            <p class="text-muted mb-0">Pazartesi - Pazar: 06:00 - 23:00</p>
                        </div>
                    </div>

                    <hr>

                    <h6 class="fw-bold mb-3">Sosyal Medya</h6>
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-outline-danger"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="btn btn-outline-info"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="btn btn-outline-danger"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Harita -->
    <div class="card mt-4">
        <div class="card-body p-0">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3021.838889834397!2d30.331442315701665!3d40.74080904329656!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccadd7b5e7c5e5%3A0x3b00f5b5c5a9c7e0!2sSakarya%20%C3%9Cniversitesi!5e0!3m2!1str!2str!4v1641234567890!5m2!1str!2str"
                    width="100%"
                    height="300"
                    style="border:0; border-radius: 0 0 15px 15px;"
                    allowfullscreen=""
                    loading="lazy">
            </iframe>
        </div>
    </div>
</div>