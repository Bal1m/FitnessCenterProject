@model List<Service>
@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="section-title">Hizmetlerimiz</h1>
        <p class="text-muted">İhtiyacınıza uygun programı seçin ve hedefinize ulaşın</p>
    </div>

    <div class="row g-4">
        @foreach (var service in Model)
        {
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header text-center">
                        @{
                            var icon = service.Name?.ToLower() switch
                            {
                                "fitness" => "bi-lightning-charge",
                                "yoga" => "bi-flower1",
                                "pilates" => "bi-person-arms-up",
                                "kick boks" => "bi-hand-index-thumb",
                                "yüzme" => "bi-water",
                                "kilo verme programı" => "bi-graph-down-arrow",
                                _ => "bi-heart-pulse"
                            };
                        }
                        <i class="bi @icon" style="font-size: 2.5rem;"></i>
                        <h4 class="mt-2 mb-0">@service.Name</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@service.Description</p>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-clock text-muted me-1"></i>
                                <span>@service.DurationMinutes dakika</span>
                            </div>
                            <div>
                                <span class="h4 text-primary mb-0">@service.Price.ToString("N0") TL</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 pb-3">
                        <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary w-100">
                            <i class="bi bi-calendar-plus me-1"></i>Randevu Al
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>