@model List<TrainerAvailability>
@{
    ViewData["Title"] = "Müsaitlik Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clock me-2"></i>Müsaitlik Yönetimi</h2>
        <a asp-action="AvailabilityCreate" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Yeni Müsaitlik
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Eğitmen</th>
                            <th>Gün</th>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var avail in Model)
                        {
                            var dayName = avail.DayOfWeek switch
                            {
                                DayOfWeek.Monday => "Pazartesi",
                                DayOfWeek.Tuesday => "Salı",
                                DayOfWeek.Wednesday => "Çarşamba",
                                DayOfWeek.Thursday => "Perşembe",
                                DayOfWeek.Friday => "Cuma",
                                DayOfWeek.Saturday => "Cumartesi",
                                DayOfWeek.Sunday => "Pazar",
                                _ => ""
                            };
                            <tr>
                                <td>@avail.Id</td>
                                <td><strong>@avail.Trainer.FullName</strong></td>
                                <td>
                                    <span class="badge bg-info">@dayName</span>
                                </td>
                                <td>@avail.StartTime.ToString(@"hh\:mm")</td>
                                <td>@avail.EndTime.ToString(@"hh\:mm")</td>
                                <td>
                                    @if (avail.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="AvailabilityDelete" asp-route-id="@avail.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Bu müsaitliği silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>