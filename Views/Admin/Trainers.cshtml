@model List<Trainer>
@{
    ViewData["Title"] = "Eğitmen Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-badge me-2"></i>Eğitmen Yönetimi</h2>
        <a asp-action="TrainerCreate" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Yeni Eğitmen
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Eğitmen</th>
                            <th>İletişim</th>
                            <th>Uzmanlık</th>
                            <th>Hizmetler</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var trainer in Model)
                        {
                            <tr>
                                <td>@trainer.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(trainer.ImageUrl))
                                        {
                                            <img src="@trainer.ImageUrl" alt="@trainer.FullName" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="bi bi-person text-white"></i>
                                            </div>
                                        }
                                        <strong>@trainer.FullName</strong>
                                    </div>
                                </td>
                                <td>
                                    <small>
                                        <i class="bi bi-envelope me-1"></i>@trainer.Email<br>
                                        @if (!string.IsNullOrEmpty(trainer.PhoneNumber))
                                        {
                                            <i class="bi bi-telephone me-1"></i>
                                            @trainer.PhoneNumber
                                        }
                                    </small>
                                </td>
                                <td><small>@trainer.Specialization</small></td>
                                <td>
                                    @foreach (var ts in trainer.TrainerServices)
                                    {
                                        <span class="badge bg-primary me-1">@ts.Service.Name</span>
                                    }
                                </td>
                                <td>
                                    @if (trainer.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="TrainerEdit" asp-route-id="@trainer.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="TrainerDelete" asp-route-id="@trainer.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Bu eğitmeni silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>