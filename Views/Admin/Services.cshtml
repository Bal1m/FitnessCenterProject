@model List<Service>
@{
    ViewData["Title"] = "Hizmet Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-grid me-2"></i>Hizmet Yönetimi</h2>
        <a asp-action="ServiceCreate" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Yeni Hizmet
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Hizmet Adı</th>
                            <th>Süre</th>
                            <th>Ücret</th>
                            <th>Durum</th>
                            <th>Oluşturulma</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var service in Model)
                        {
                            <tr>
                                <td>@service.Id</td>
                                <td>
                                    <strong>@service.Name</strong>
                                    @if (!string.IsNullOrEmpty(service.Description))
                                    {
                                        <br>
                                
                                        <small class="text-muted">@service.Description.Substring(0, Math.Min(50, service.Description.Length))...</small>
                                    }
                                </td>
                                <td>@service.DurationMinutes dk</td>
                                <td><span class="fw-bold text-primary">@service.Price.ToString("N0") TL</span></td>
                                <td>
                                    @if (service.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>@service.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <a asp-action="ServiceEdit" asp-route-id="@service.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="ServiceDelete" asp-route-id="@service.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Bu hizmeti silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>