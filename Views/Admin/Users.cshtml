@model List<UserListViewModel>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people me-2"></i>Kullanıcı Yönetimi</h2>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Kullanıcı</th>
                            <th>İletişim</th>
                            <th>Roller</th>
                            <th>Randevu Sayısı</th>
                            <th>Kayıt Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@user.FullName</strong>
                                    </td>
                                    <td>
                                        <small>
                                            <i class="bi bi-envelope me-1"></i>@user.Email<br>
                                            @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                            {
                                                <i class="bi bi-telephone me-1"></i>
                                                @user.PhoneNumber
                                            }
                                        </small>
                                    </td>
                                    <td>
                                        @foreach (var role in user.Roles)
                                        {
                                            var badgeClass = role == "Admin" ? "bg-danger" : "bg-primary";
                                            <span class="badge @badgeClass me-1">@role</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@user.TotalAppointments</span>
                                    </td>
                                    <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!user.Roles.Contains("Admin"))
                                        {
                                            <form asp-action="UserToggleStatus" asp-route-id="@user.Id" method="post" class="d-inline">
                                                @if (user.IsActive)
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="Devre Dışı Bırak">
                                                        <i class="bi bi-pause-circle"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Aktif Et">
                                                        <i class="bi bi-play-circle"></i>
                                                    </button>
                                                }
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">
                                    <i class="bi bi-people me-2"></i>Henüz kullanıcı bulunmamaktadır.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>